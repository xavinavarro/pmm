<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/azull"
    tools:context="com.example.xavin.miproyectoxavinavarro.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="80px"
        android:textColor="@color/azul"
        android:text="LOGIN"
        android:layout_weight="0.23" />

    <TextView
        android:text="USER"
        android:layout_width="500px"
        android:textColor="@color/marillo"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:id="@+id/textView"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:textColorHint="@color/azul"
        android:textColor="@color/verde"
        android:textAlignment="center"
        android:layout_gravity="center"

        android:inputType="textPersonName"
        android:hint="User"
        android:id="@+id/verificar_usuario"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="PASSWORD"
        android:layout_width="500px"
        android:textColor="@color/marillo"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/textView2"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:hint="Password"
        android:textColorHint="@color/azul"
        android:textColor="@color/verde"
        android:inputType="textPassword"
        android:id="@+id/verificar_contraseÃ±a"
        android:layout_weight="0.04"
        android:layout_marginBottom="50dp" />
    <Button
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/Entrar"
        android:text="LOGIN"
        />

    <Button
        android:layout_width="103dp"
        android:text="REGISTER"
        android:id="@+id/ir_a_registro"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:elevation="0dp" />
</LinearLayout>
