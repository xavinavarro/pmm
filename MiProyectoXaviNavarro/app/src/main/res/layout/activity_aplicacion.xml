<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pantalla__aplicacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo"
    tools:context="com.example.xavin.miproyectoxavinavarro.Pantalla_Aplicacion">

    <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/rgroup"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Pagar con PayPal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/boton_comprar"
            android:layout_alignEnd="@+id/tarjeta"
            android:id="@+id/paypal" />

    </RadioGroup>

    <Button
        android:text="COMPRAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/boton_comprar"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/rgroup"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="PlayStation 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/playstation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="XBOX One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:id="@+id/xbox"
        android:layout_below="@+id/pc"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="PC - Ordenador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pc"
        android:layout_below="@+id/playstation"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/xbox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <RadioButton
        android:text="Pagar con tarjeta."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tarjeta"
        android:layout_below="@+id/rgroup"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Pagar en efectivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/efectivo"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
